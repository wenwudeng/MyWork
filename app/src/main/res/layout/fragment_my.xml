<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/setting"
            android:layout_width="17dp"
            android:layout_height="20dp"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_hamburg"
            android:layout_gravity="left" />

        <TextView
            android:id="@+id/mine_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="17dp"
            android:text="留白"
            android:layout_gravity="center" />
    </androidx.appcompat.widget.Toolbar>



    <RelativeLayout
        android:id="@+id/l1"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/mine_photo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/img"
                app:civ_border_width="2dp"
                app:civ_border_color="#0000" />

            <LinearLayout
                android:layout_marginLeft="120dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/my_concern_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/my_fans_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:text="12"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/my_collect_count"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="60dp"
                        android:layout_height="wrap_content"
                        android:text="39"
                        android:textStyle="bold"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/my_concern"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="关注" />

                    <TextView
                        android:id="@+id/my_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:text="粉丝" />

                    <TextView
                        android:id="@+id/my_collect"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="45dp"
                        android:layout_height="wrap_content"
                        android:text="获赞" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="63dp">

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pagerMy"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layoutMy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="center"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorHeight="3dp"
            app:tabIndicatorColor="@color/red"
            app:tabMaxWidth="-10dp"
            app:tabSelectedTextColor="@color/red" />
    </androidx.viewpager.widget.ViewPager>


</LinearLayout>