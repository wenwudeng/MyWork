<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/help_image_show"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/img"
            app:civ_border_width="2dp"
            app:civ_border_color="#0000" />

        <TextView
            android:id="@+id/help_title_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:text="一岁的小型泰迪需要吃保健品吗?" />
    </LinearLayout>

    <TextView
        android:id="@+id/help_content_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:lines="1"
        android:ellipsize="end"
        android:text="怎么给button设置背景颜色？【Android】
        现在我想给按钮添加背景颜色，怎么做" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="31dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/help_time_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="1周前" />

        <TextView
            android:id="@+id/help_reply_Count_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:textSize="12sp"
            android:text="64" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="人回答" />

        <Button
            android:id="@+id/help_pet_button"
            android:layout_height="25dp"
            android:layout_width="70dp"
            android:layout_marginStart="80dp"
            android:background="@drawable/btn_round_helpet"
            android:textSize="12sp"
            android:text="帮助TA"
            android:textColor="@color/red" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"/>

</LinearLayout>