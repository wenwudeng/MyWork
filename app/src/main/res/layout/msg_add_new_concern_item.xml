<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/msg_concern_user_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img"
            android:layout_marginTop="8dp"
            android:layout_marginStart="5dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#0000" />

        <LinearLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_marginStart="50dp">

            <TextView
                android:id="@+id/msg_concern_user_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:text="留白" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=": 关注了您" />
        </LinearLayout>

        <TextView
            android:id="@+id/msg_concern_user_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/r1"
            android:text="1周前" />


        <Button
            android:id="@+id/msg_concern_follow"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_round_helpet"
            android:textColor="@color/red"
            android:text="回粉" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

</LinearLayout>