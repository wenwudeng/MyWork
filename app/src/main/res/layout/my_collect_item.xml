<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_ask" />

            <TextView
                android:id="@+id/my_collect_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:text="武汉加油，中国加油！" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/my_collect_user_photo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/img"
                app:civ_border_width="2dp"
                app:civ_border_color="#0000" />

            <TextView
                android:id="@+id/my_collect_user_name"
                android:layout_toRightOf="@id/my_collect_user_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:text="留白" />


            <Button
                android:id="@+id/my_collect_recommend_button"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@id/my_collect_review_count"
                android:background="@mipmap/icon_comment_sm"
                />

            <TextView
                android:id="@+id/my_collect_review_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/my_collect_favour_button"
                android:layout_marginStart="5dp"
                android:text="0" />


            <Button
                android:id="@+id/my_collect_favour_button"
                android:layout_marginStart="30dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@id/my_collect_favour_count"
                android:background="@mipmap/icon_upvote"
                />

            <TextView
                android:id="@+id/my_collect_favour_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginStart="5dp"
                android:text="0" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>